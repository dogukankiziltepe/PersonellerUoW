@model IEnumerable<PersonellerUoW.Models.Entities.Personel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div>
    <div>
        <a href="/home/savepersonel">Yeni</a>
    </div>
    <table id="personel" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyad</th>
                <th>Cinsiyet</th>
                <th>Doğum Tarihi</th>
                <th>Ülke</th>
                <th>Şehir</th>
                <th>Düzeltme Yap</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    @if (item.Gender == false)
                    {
                        <td>Erkek</td>
                    }
                    else
                    {
                        <td>Kadın</td>
                    }
                    <td>@item.DateOfBirth.ToShortDateString()</td>
                    <td>@item.Country.Name</td>
                    <td>@item.City.Name</td>
                    <td><a class="btn btn-primary" asp-action="UpdatePersonel" asp-route-id="@item.PersonelID">Düzelt</a></td>
                    <td><a class="btn btn-danger" data-toggle="modal" data-target="#Sure">Sil</a></td>
                </tr>
                <div class="modal fade" id="Sure" tabindex="-1" role="dialog" aria-labelledby="">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                <h4 class="modal-title" id="myModalLabel">Gerçekten silmek istiyor musunuz?</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Hayır</button>
                                <a class="btn btn-primary" asp-action="DeletePersonel" asp-route-id="@item.PersonelID">Evet</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>
    
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>$(document).ready(function () {
        $('#personel').DataTable();
    });</script>
